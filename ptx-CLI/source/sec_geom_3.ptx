  <exercise>
    <statement>
      <ol>
        <li>
          <p>
            horizontal stretch by a factor of 3
          </p>
        </li>
        <li>
          <p>
            reflection across the line <m>y=x</m>
          </p>
        </li>
      </ol>
    </statement>
